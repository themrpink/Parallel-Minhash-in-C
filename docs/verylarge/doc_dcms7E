| footnotes = Ownership&lt;ref name=&quot;shareholder structure&quot;&gt;{{cite web |url=https://www.daimler.com/investor-relations/daimler-shares/shareholder-structure |title=Shareholder Structure |at=Shareholder Structure by Ownership |accessdate=20 October 2017 |date=30 September 2017 |publisher=Daimler AG |archive-url=https://web.archive.org/web/20150923224838/http://www.daimler.com/investor-relations/daimler-shares/shareholder-structure |archive-date=23 September 2015 |url-status=dead }}{{Self-published source|date=October 2017}}&lt;/ref&gt;
