    <title>Abessive case</title>
    <ns>0</ns>
    <id>42846</id>
    <revision>
      <id>990947870</id>
      <parentid>919875431</parentid>
      <timestamp>2020-11-27T12:35:48Z</timestamp>
      <contributor>
        <username>Haspelmt</username>
